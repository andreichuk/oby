{
  "name": "oby",
  "description": "A tiny Observable implementation, the brilliant primitive you need to build a powerful reactive system.",
  "version": "2.4.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc --skipLibCheck",
    "compile:watch": "tsc --skipLibCheck --watch",
    "memory": "node tasks/memory.js",
    "test:native": "fava '**/native/**'",
    "test:native:watch": "fava -w '**/native/**'",
    "test:sinuous": "bash test/sinuous/index.sh",
    "test": "npm run test:sinuous && npm run test:native",
    "prepublishOnly": "npm run clean && npm run compile && npm run test"
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/oby/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/oby.git"
  },
  "keywords": [
    "observable",
    "signal",
    "reactive",
    "reactivity",
    "tiny",
    "small",
    "fast"
  ],
  "devDependencies": {
    "fava": "^0.0.4",
    "ispy": "^0.1.2",
    "promise-resolve-timeout": "^1.2.1",
    "rimraf": "^3.0.2",
    "tape": "^5.5.0",
    "typescript": "^4.5.5"
  }
}
